@page "/"
@page "/home"
@using System.Threading
@inject NavigationManager NavigationManager

<div class="search-main">
    <div class="container">
        <div class="col s4 offset-s4"></div>
        <h1>H<span class="teal-text lighten-1">i</span>ddenSolutions</h1>
        <div class="input-field">
            <input id="search" name="search" type="text" placeholder="What are you searching for?" @bind="SearchQuery"/>
        </div>
        <button class="btn waves-effect waves-light" @onclick="NavigateToSearch"><i class="material-icons search"></i>Search</button>
        <button class="btn waves-effect waves-light" @onclick="NavigateToCreateSolution"><i class="material-icons plus"></i>Add your own solution</button>
    </div>
</div>


@code{
    
    public string SearchQuery { get; set; }

    private void NavigateToSearch()
    {
        NavigationManager.NavigateTo($"search/{SearchQuery}");
    }

    private void NavigateToCreateSolution()
    {
        NavigationManager.NavigateTo("createSolution");
    }

}